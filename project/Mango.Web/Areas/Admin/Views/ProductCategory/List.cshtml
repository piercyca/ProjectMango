@model Mango.Web.Areas.Admin.Models.ProductCategoryListViewModel

@{
    ViewBag.Title = "Product Categories";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
    <li class="active">@Html.ActionLink("Product Categories", MVC.Admin.ProductCategory.List())</li>
</ol>

<h2 class="pull-left">
    @ViewBag.Title<a href="@Url.Action(MVC.Admin.ProductCategory.Create())" class="btn btn-info btn-xs pull-right">
        <span class="fa fa-plus"></span> Create
    </a>
</h2>

<div class="row">
    <div class="col-md-12">
        @if (!Model.ProductCategoryList.Any())
        {
            <div class="alert-danger">
                No Product Categories Found
            </div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Actions</th>
                    <th>Name</th>
                    <th>Url Slug</th>
                    <th>Description</th>
                    <th>Keywords</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ProductCategoryList)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-xs" href="@Url.Action(MVC.Admin.ProductCategory.Edit(item.ProductCategoryId))">
                                <i class="fa fa-cog"></i> Edit
                            </a>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.UrlSlug</td>
                        <td>@item.Description</td>
                        <td>@item.Keywords</td>
                    </tr>
                }
                </tbody>
            </table>
        }


    </div>
</div>
