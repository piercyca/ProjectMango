@model IQueryable<Mango.Web.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<ol class="breadcrumb">
	<li>@Html.ActionLink("Home", MVC.Home.Index())</li>
	<li class="active">@Html.ActionLink("Users", MVC.Admin.User.Index())</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="row">
	<div class="col-md-12">
		@if (Model.Any())
		{
			<table class="table table-striped table-hover" style="width: auto">
				<tr>
					<th width="100px"></th>
					<th>Username</th>
					<th>Email</th>
					<th>Email Confirmed</th>
					<th>Phone</th>
					<th>Phone Confirmed</th>
					<th>Two Factor Enabled</th>
					<th>Lockout End Date</th>
					<th>Lockout Enabled</th>
					<th>Access Failed Count</th>
				</tr>
				@foreach (var m in Model)
				{
					<tr>
						<td>
							<div class="btn-group">
								<button type="button" class="btn btn-xs btn-primary">Actions</button>
								<button type="button" class="btn btn-xs btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
									<span class="caret"></span>
									<span class="sr-only">Toggle Dropdown</span>
								</button>
								<ul class="dropdown-menu" role="menu">
									<li>
										<a class="toggle-pleasewait" href="@Url.Action(MVC.Admin.User.Edit(m.Id))">
											<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
										</a>
									</li>
								</ul>
							</div>
						</td>
						<td>@m.UserName</td>
						<td>@m.Email</td>
						<td class="text-center">@(m.EmailConfirmed ? "Yes" : "No")</td>
						<td>@m.PhoneNumber</td>
						<td class="text-center">@(m.PhoneNumberConfirmed ? "Yes" : "No")</td>
						<td class="text-center">@(m.TwoFactorEnabled ? "Yes" : "No")</td>
						<td>@m.LockoutEndDateUtc</td>
						<td class="text-center">@(m.LockoutEnabled ? "Yes" : "No")</td>
						<td>@m.AccessFailedCount</td>
					</tr>
				}
			</table>
		}
		else
		{
			<p calss="alert">No records to display</p>
		}
	</div>
</div>