@model IEnumerable<Mango.Core.Entity.Customer>

@{
    ViewBag.Title = "Customers";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
	<li class="active">@Html.ActionLink("Customers", MVC.Admin.Customer.Index())</li>
</ol>

<h2 class="pull-left">
    @ViewBag.Title<a href="@Url.Action(MVC.Admin.Customer.Create())" class="btn btn-info btn-xs pull-right">
        <span class="fa fa-plus"></span> Create
    </a>
</h2>

<div class="row">
	<div class="col-md-12">
		@if (Model.Any())
		{
			<table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email Address</th>
                        <th>UserId</th>
                    </tr>
                </thead>
				@foreach (var m in Model)
				{
					<tr>
						<td>
                            <a class="btn btn-primary btn-xs" href="@Url.Action(MVC.Admin.Customer.Edit(m.CustomerId))">
                                <i class="fa fa-cog"></i> Edit
                            </a>
						</td>
						<td>@m.CustomerId</td>
						<td>@m.FullName</td>
						<td>@m.Email</td>
						<td>@m.Username</td>
					</tr>
				}
			</table>
		}
		else
		{
			<p class="alert">No records to display</p>
		}
	</div>
</div>