@model IEnumerable<Mango.Core.Entity.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>@ViewBag.Title</h2>

@if (User.Identity.IsAuthenticated)
{
    if (Model.Any())
    {
        <table class="table table-striped table-hover" style="width:auto">
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
	            <th>E-mail</th>
				<th>UserId</th>
                <th>@Html.ActionLink("Create", "Create", "Customer", null)</th>
            </tr>
            @foreach (var m in Model)
            {
	            <tr>
		            <td>@m.CustomerId</td>
		            <td>@m.FirstName</td>
		            <td>@m.LastName</td>
		            <td>@m.Email</td>
		            <td>@m.UserId</td>
		            <td>@Html.ActionLink("Edit", "Edit", "Customer", new { id = m.CustomerId }, null)</td>
	            </tr>
            }
        </table>
    }
    else
    {
        <p calss="alert">No records to display</p>
    }
}
else
{
    <p calss="alert">Not logged in</p>
}