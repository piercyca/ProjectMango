@model IEnumerable<Mango.Core.Entity.Customer>

@{
    ViewBag.Title = "Customers";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
	<li class="active">@Html.ActionLink("Customers", MVC.Admin.Customer.Index())</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="row">
	<div class="col-md-12">
		<a href="@Url.Action(MVC.Admin.Customer.Create())" class="btn btn-primary btn-xs">
			<span class="fa fa-plus"></span> Create
		</a>
	</div>
	<br/>
	<br/>
	<div class="col-md-12">
		@if (Model.Any())
		{
			<table class="table table-striped table-hover">
				<tr>
					<th></th>
					<th>#</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>E-mail</th>
					<th>UserId</th>
				</tr>
				@foreach (var m in Model)
				{
					<tr>
						<td>
							<div class="btn-group">
								<button type="button" class="btn btn-xs btn-primary">Actions</button>
								<button type="button" class="btn btn-xs btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
									<span class="caret"></span>
									<span class="sr-only">Toggle Dropdown</span>
								</button>
								<ul class="dropdown-menu" role="menu">
									<li>
										<a class="toggle-pleasewait" href="@Url.Action(MVC.Admin.Customer.Edit(m.CustomerId))">
											<span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
										</a>
									</li>
								</ul>
							</div>
						</td>
						<td>@m.CustomerId</td>
						<td>@m.FirstName</td>
						<td>@m.LastName</td>
						<td>@m.Email</td>
						<td>@m.Username</td>
					</tr>
				}
			</table>
		}
		else
		{
			<p class="alert">No records to display</p>
		}
	</div>
</div>