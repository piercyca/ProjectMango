@model System.Collections.Generic.IEnumerable<Mango.Core.Entity.OrderLineItem>

@{
	ViewBag.Title = "Order Details";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
	<li class="active">@Html.ActionLink("Orders", MVC.Admin.Order.List())</li>
	<li class="active">@Html.ActionLink("Order Details", MVC.Admin.Order.Details(Model.First().OrderId))</li>
</ol>

<h2>Order Details</h2>

<div class="row">
	<div class="col-md-12">
		@if (!Model.Any())
		{
			<div class="alert alert-danger">
				No Order Items Found
			</div>
		}
		else
		{
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Order Id</th>
						<th>Product Id</th>
						<th>Product</th>
						<th>Quantity</th>
						<th>Price</th>
						<th>Order Image</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.OrderItemSequence</td>
							<td>@item.OrderId</td>
							<td>@item.ProductId</td>
							<td>@item.Product.Name</td>
							<td>@item.Quantity</td>
							<td>@item.UnitPrice</td>
							<td><img src="@item.OrderImage" /></td>
						</tr>
					}
				</tbody>
			</table>
		}

	</div>
</div>