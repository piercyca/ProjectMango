@model Mango.Web.Areas.Admin.Models.OrganizationFormViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "organization-form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.EditorFor(model => model.OrganizationId)
    @Html.EditorFor(model => model.OrganizationImagesString)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Abbreviation, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Abbreviation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Abbreviation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrganizationImages, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a id="btnUploadOrganizationImage" class="btn btn-info">Upload</a>
                <hr />
                <div class="sortable-images">
                    @Html.EditorFor(model => Model.OrganizationImages)
                </div>
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default btn-primary">
                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> Save
                </button>
            </div>
        </div>
    </div>
}

<script>
    var @Model.UploadOrganizationImageViewModel.OptionsVarName = {
        modalId: "#@Model.UploadOrganizationImageViewModel.ModalId",
        modalTrigger: "#btnUploadOrganizationImage"
    };
</script>
@Html.EditorFor(model => model.UploadOrganizationImageViewModel)


