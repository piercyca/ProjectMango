@model Mango.Web.Areas.Admin.Models.OrganizationListViewModel
@{
    ViewBag.Title = "Organizations";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
    <li class="active">@Html.ActionLink("Organizations", MVC.Admin.Organization.List())</li>
</ol>

<h2 class="pull-left">
    @ViewBag.Title<a href="@Url.Action(MVC.Admin.Organization.Create())" class="btn btn-info btn-xs pull-right">
        <span class="fa fa-plus"></span> Create
    </a>
</h2>


<div class="row">
    <div class="col-md-12">
        @if (!Model.OrganizationList.Any())
        {
            <div class="alert-danger">
                No Organizations Found
            </div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Actions</th>
                    <th>Abbr</th>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.OrganizationList)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-xs" href="@Url.Action(MVC.Admin.Organization.Edit(item.OrganizationId))">
                                <i class="fa fa-cog"></i> Edit
                            </a>
                        </td>
                        <td>@item.Abbreviation</td>
                        <td>@item.Name</td>
                    </tr>
                }
                </tbody>
            </table>
        }


    </div>
</div>
