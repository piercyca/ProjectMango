@model Mango.Web.Areas.Admin.Models.OrganizationListViewModel
@{
    ViewBag.Title = "Organizations";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", MVC.Admin.Home.Index())</li>
    <li class="active">@Html.ActionLink("Organizations", MVC.Admin.Organization.List())</li>
</ol>

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action(MVC.Admin.Organization.Create())" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-plus"></span> Create
        </a>
    </div>
    <div class="col-md-12">
        @if (!Model.OrganizationList.Any())
        {
            <div class="alert-danger">
                No Organizations Found
            </div>
        }
        else
        {
            <table class="table">
                <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>Abbr</th>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.OrganizationList)
                {
                    <tr>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-xs btn-primary">Actions</button>
                                <button type="button" class="btn btn-xs btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="toggle-pleasewait" href="@Url.Action(MVC.Admin.Organization.Edit(item.OrganizationId))">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                                        </a>
                                    </li>
                                    @*<li class="divider"></li>
                                <li>
                                    <a aria-label="covers" href="@Url.Action(MVC.Issue.EditCovers(Model.IssueId))">
                                        <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Covers
                                    </a>
                                </li>*@
                                </ul>
                            </div>
                        </td>
                        <td>@item.Abbreviation</td>
                        <td>@item.Name</td>
                    </tr>
                }
                </tbody>
            </table>
        }


    </div>
</div>
