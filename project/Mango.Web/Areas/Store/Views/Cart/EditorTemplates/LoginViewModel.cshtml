@model Mango.Web.Models.LoginViewModel

<div class="modal" id="cart_account_login">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm(MVC.StoreArea.Cart.ActionNames.Login,
                MVC.StoreArea.Cart.Name,
                new { returnUrl = ViewBag.ReturnUrl, area = MVC.StoreArea.Name },
                FormMethod.Post,
                new { role = "form" }
                ))
            {
                <div class="modal-header">
                    <a class="close" data-dismiss="modal" aria-label="Close" href="@Url.Action(MVC.StoreArea.Cart.Account())"><span aria-hidden="true">&times;</span></a>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new {@class = "control-label col-md-3"})
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new {@class = "control-label col-md-3"})
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RememberMe, new {@class = "control-label col-md-3"})
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.RememberMe)
                                    @Html.ValidationMessageFor(model => model.RememberMe, "", new {@class = "text-danger"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" href="@Url.Action(MVC.StoreArea.Cart.Account())">Close</a>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
