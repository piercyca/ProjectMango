@model Mango.Web.Areas.Store.Models.CartCustomerViewModel
@{
    ViewBag.Title = "Address";
}


<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h1>Checkout</h1>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-6">
                @Html.EditorFor(model => model.Customer)
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                @Html.EditorFor(model => model.ShippingAddress)
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-9 col-md-3">
                <button type="submit" class="btn btn-success btn-block btn-paypal"> @* TODO - style btn-paypal *@
                    <span class="glyphicon" aria-hidden="true"></span> Checkout with PayPal
                </button>
            </div>
        </div>
    }
</div>


