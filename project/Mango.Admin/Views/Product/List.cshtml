@model Mango.Admin.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Product List";
}

<h2>Products</h2>

<div class="row">
    <div class="col-md-12">
        @if (Model.ProductList.Count() == 0)
        {
            <div class="alert-danger">
                No Products Found
            </div>
        }
        else
        {
            <table>
                @foreach (var item in Model.ProductList)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                    </tr>
                }
            </table>
        }


    </div>
</div>
