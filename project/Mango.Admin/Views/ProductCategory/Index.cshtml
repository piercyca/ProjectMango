@model IEnumerable<Mango.Core.Entity.ProductCategory>

@{
    ViewBag.Title = "Product Categories";
}

<h2>@ViewBag.Title</h2>

@if (User.Identity.IsAuthenticated)
{
    if (Model.Any())
    {
        <table class="table table-striped table-hover" style="width:auto">
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.ProductCategoryId</td>
                    <td>@m.Code</td>
                    <td>@m.Name</td>
                    <td>@m.Description</td>
                    <td>@Html.ActionLink("Edit", "Edit", "ProductCategory", new { id = m.ProductCategoryId}, null)</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p calss="alert">No records to display</p>
    }
}
else
{
    <p calss="alert">Not logged in</p>
}